<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_laundry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_medium"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_laundry"
        android:clipToPadding="false"
        android:paddingHorizontal="@dimen/padding_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_all_cleaned"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/ic_done"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/text_all_cleaned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_cleaned"
        android:textSize="@dimen/text_medium"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintTop_toBottomOf="@+id/image_all_cleaned"
        app:layout_constraintStart_toStartOf="@id/image_all_cleaned"
        app:layout_constraintEnd_toEndOf="@id/image_all_cleaned"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/placeholder_washing"
        android:layout_width="220dp"
        android:layout_height="220dp"
        app:lottie_rawRes="@raw/wash"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/text_washing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/washing_now"
        android:textSize="@dimen/text_medium"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_washing"
        app:layout_constraintStart_toStartOf="@id/placeholder_washing"
        app:layout_constraintEnd_toEndOf="@id/placeholder_washing"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_clean_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/margin_giant"
        app:tint="@color/white_300"
        android:backgroundTint="@color/md_theme_light_surfaceTint"
        />

</androidx.constraintlayout.widget.ConstraintLayout>